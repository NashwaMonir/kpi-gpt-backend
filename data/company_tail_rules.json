{
  "behavior": {
    "selection_order": [
      "strategic_named",
      "strategic_generic",
      "named_company",
      "generic_company",
      "benefit_only",
      "fallback"
    ],
    "fallback_bucket": "fallback",
    "generic_detection": {
      "treat_as_generic_if_matches_regex": [
        "^generic$",
        "^n/a$",
        "^not set$",
        "organization",
        "enterprise",
        "company",
        "corporation",
        "group"
      ]
    }
  },
  "buckets": {
    "strategic_named": {
      "id": "strategic_named",
      "conditions": {
        "has_company": true,
        "company_is_generic": false,
        "has_benefit": true,
        "is_strategic": true
      },
      "variants": [
        {
          "id": "strategic_named_1",
          "template": "supporting {company}'s strategic goal of {benefit}"
        },
        {
          "id": "strategic_named_2",
          "template": "to advance {company}'s strategic priorities around {benefit}"
        },
        {
          "id": "strategic_named_3",
          "template": "in alignment with {company}'s enterprise strategy for {benefit}"
        }
      ]
    },
    "strategic_generic": {
      "id": "strategic_generic",
      "conditions": {
        "has_company": true,
        "company_is_generic": true,
        "has_benefit": true,
        "is_strategic": true
      },
      "variants": [
        {
          "id": "strategic_generic_1",
          "template": "supporting the organization's strategic goal of {benefit}"
        },
        {
          "id": "strategic_generic_2",
          "template": "to advance the organization's strategic priorities around {benefit}"
        }
      ]
    },
    "named_company": {
      "id": "named_company",
      "conditions": {
        "has_company": true,
        "company_is_generic": false,
        "has_benefit": true
      },
      "variants": [
        {
          "id": "named_company_1",
          "template": "supporting {company}'s digital transformation and {benefit}"
        },
        {
          "id": "named_company_2",
          "template": "to strengthen {company}'s enterprise performance through {benefit}"
        },
        {
          "id": "named_company_3",
          "template": "in support of {company}'s long-term objectives, including {benefit}"
        }
      ]
    },
    "generic_company": {
      "id": "generic_company",
      "conditions": {
        "has_company": true,
        "company_is_generic": true,
        "has_benefit": true
      },
      "variants": [
        {
          "id": "generic_company_1",
          "template": "supporting the organization's digital transformation and {benefit}"
        },
        {
          "id": "generic_company_2",
          "template": "to strengthen the organization's enterprise performance through {benefit}"
        },
        {
          "id": "generic_company_3",
          "template": "in support of the organization's long-term objectives, including {benefit}"
        }
      ]
    },
    "benefit_only": {
      "id": "benefit_only",
      "conditions": {
        "has_company": false,
        "has_benefit": true
      },
      "variants": [
        {
          "id": "benefit_only_1",
          "template": "supporting the organization's strategic focus on {benefit}"
        },
        {
          "id": "benefit_only_2",
          "template": "to drive measurable impact related to {benefit}"
        }
      ]
    },
    "fallback": {
      "id": "fallback",
      "conditions": {},
      "variants": [
        {
          "id": "fallback_1",
          "template": "supporting the organization's long-term performance and resilience"
        },
        {
          "id": "fallback_2",
          "template": "to strengthen enterprise-wide performance and risk management"
        }
      ]
    }
  }
}