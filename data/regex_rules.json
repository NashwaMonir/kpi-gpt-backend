[
  {
    "id": "collapse_multiple_spaces",
    "pattern": " {2,}",
    "flags": "g",
    "replacement": " "
  },
  {
    "id": "space_before_comma",
    "pattern": "\\s+,",
    "flags": "g",
    "replacement": ","
  },
  {
    "id": "ensure_space_after_comma",
    "pattern": ",(\\S)",
    "flags": "g",
    "replacement": ", $1"
  },
  {
    "id": "space_before_period",
    "pattern": "\\s+\\.",
    "flags": "g",
    "replacement": "."
  },
  {
    "id": "ensure_space_after_period_letter",
    "pattern": "\\.(?=[A-Za-z])",
    "flags": "g",
    "replacement": ". "
  },
  {
    "id": "fix_semicolon_spacing",
    "pattern": "\\s*;\\s*",
    "flags": "g",
    "replacement": "; "
  },
  {
    "id": "remove_space_before_percent",
    "pattern": "(\\d)\\s+%",
    "flags": "g",
    "replacement": "$1%"
  },
  {
    "id": "normalize_ge_sign_spacing",
    "pattern": "\\s*(≥|<=|>=|≤)\\s*",
    "flags": "g",
    "replacement": " $1 "
  },
  {
    "id": "remove_space_before_parenthesis",
    "pattern": "\\s+\\(",
    "flags": "g",
    "replacement": " ("
  },
  {
    "id": "fix_trailing_comma_before_period",
    "pattern": ",\\.",
    "flags": "g",
    "replacement": "."
  }
]